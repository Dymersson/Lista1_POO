import java.util.Scanner;

    public class CalculoSalario {
        public static void main(String[] args){
            Scanner sc = new Scanner(System.in);
            System.out.println("Digite o números de carros vendidos:");
            int numCarros = sc.nextInt();
    
            System.out.println("Digite o valor total de vendas: ");
            double valorTotalVendas = sc.nextDouble();
    
            System.out.println("Digite o sálario fixo: ");
            double salarioFixo = sc.nextDouble();
    
            System.out.println("Digite o valor por carro vendido: ");
            double valorPorCarro = sc.nextDouble();
    
            double comissaoFixa = valorPorCarro * numCarros;
            double comissaoPercentual = 0.5 * valorTotalVendas;
            double salarioFinal = salarioFixo * comissaoFixa + comissaoPercentual;
             System.out.println("O salário final é: " + salarioFinal);
             sc.close();
        }
    }
